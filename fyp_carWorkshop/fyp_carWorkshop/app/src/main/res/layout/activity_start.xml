<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartActivity"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statususer"
        android:text="statusUser"
        android:visibility="gone"/>
    <include
        android:id="@+id/toolbar"
        layout="@layout/profile_bar_layout"/>

    <!--<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp"
        android:layout_marginBottom="-50dp">

    </androidx.cardview.widget.CardView>-->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@android:color/darker_gray"
        android:background="@drawable/green_boader"
        tools:targetApi="p">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Show Appointment"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:id="@+id/showAppointment"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@android:color/darker_gray"
        android:background="@drawable/green_boader"
        tools:targetApi="p">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Vehicle"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:id="@+id/addVehicle"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@android:color/darker_gray"
        android:background="@drawable/green_boader"
        tools:targetApi="p">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:id="@+id/editProfile"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@android:color/darker_gray"
        android:background="@drawable/green_boader"
        tools:targetApi="p">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Edit Vehicle"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:id="@+id/editVehicle"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@android:color/darker_gray"
        android:background="@drawable/green_boader"
        tools:targetApi="p">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Review Shop"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:id="@+id/rankShop"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"/>
    </FrameLayout>

</LinearLayout>